@typeparam Titem

@if (Listado == null)
{
    @*<img src="https://media.giphy.com/media/QBd2kLB5qDmysEXre9/giphy.gif" width="150" />
        <br />*@


    @if (Cargando == null)
    {
        <text>Cargando.....</text>
    }
    else
    {
        @Cargando

    }

}
else if (Listado.Count == 0)
{
    @if (NoHayRegistros == null)
    {

        <text>No hay registros para mostrar....</text>
    }
    else
    {
        @NoHayRegistros
    }
}
else
{
    foreach (var elemento in Listado)
    {
        @HayRegistros(elemento);
    }
}



@code {

    [Parameter]
    public RenderFragment Cargando { get; set; }
    [Parameter]
    public RenderFragment NoHayRegistros { get; set; }
    [Parameter] public RenderFragment<Titem> HayRegistros { get; set; }
    [Parameter] public List<Titem> Listado { get; set; }



}
